@model CategorySearchResult
@{
    Layout = null;
}

<div class=" box box-primary ">
    <div class="box-body">
        <div>
            <p style="margin: 10px 0 10px 0">
                có <strong>@Model.RowCount</strong> khách hàng trong tổng số <strong>@Model.PageCount</strong> trang
            </p>

            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr class="bg-primary">
                            <th style="text-align: center">Tên loại hàng  </th>
                            <th style="text-align: center">Mô tả </th>
                            <th style="width:80px"> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                            <tr>
                                <td style="text-align: center"> @item.CategoryName </td>

                                <td style="text-align: center"> @item.Description </td>

                                <td>
                                    <a href="~/Category/Edit/@item.CategoryID" class="btn btn-xs btn-info">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Category/Delete/@item.CategoryID" class="btn btn-xs btn-danger">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center">
                <ul class="pagination">
                    @for (int p = 1; p <= Model.PageCount; p++)
                    {
                        if (p == Model.Page)
                        {
                            <li class="active"><a href="#">@p</a></li>
                        }
                        else
                        {
                            <li><a href="javascript:;" onclick="doSearch('#formSearch' , @p)">@p</a></li>
                        }
                    }
                </ul>
            </div>


        </div>


    </div>
</div>
