@model SV20T1020109.Web.Models.SupplierSearchResult
@{
    ViewBag.Title = "Quản lý nhà cung cấp";
}

<div class=" box box-primary ">
    <div class="box-body">
        <!--Form nhập đầu vào tìm kiếm-->
        <form id="formsearch" action="~/Supplier">
            <div class="input-group">
                <input name="searchValue" type="text" class="form-control"
                       placeholder="Nhập tên nhà cung cấp cần tìm " value="@Model.SearchValue">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>

                    <a href="~/Supplier/Create" class="btn btn-primary" style="margin-left: 5px">
                        <i class="fa fa-plus"></i>
                        Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <!--Hiển thị kết quả tìm kiếm -->

        <div>
            <p style="margin : 10px 0 10px 0">
                có <strong> @Model.RowCount </strong> nhà cung cấp trong tổng số <strong>@Model.PageCount</strong> trang
            </p>

            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr class="bg-primary">
                            <th>Tên nhà cung cấp </th>
                            <th>Tên liên hệ  </th>
                            <th>Điện thoại </th>
                            <th>Email </th>
                            <th>Địa chỉ </th>
                            <th>Tỉnh/thành </th>
                            <th style="width:80px"> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Data)
                        {
                            <tr>
                                <td>@item.SupplierName</td>
                                <td>@item.ContactName</td>
                                <td>@item.Phone</td>
                                <td>@item.Email</td>
                                <td>@item.Address </td>
                                <td>@item.Province</td>
                                <td>
                                    <a href="~/Supplier/Edit/@item.SupplierID" class="btn btn-xs btn-info">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Supplier/Delete/@item.SupplierID" class="btn btn-xs btn-danger">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="text-center">
                <ul class="pagination">
                    @for (int p = 1; p <= Model.PageCount; p++)
                    {
                        if (p == Model.Page)
                        {
                            <li class="active"><a href="#">@p</a></li>
                        }
                        else
                        {
                            <li><a href="~/Supplier?page=@p&searchValue=@Model.SearchValue">@p</a></li>
                        }
                    }
                </ul>
            </div>


        </div>


    </div>
</div>