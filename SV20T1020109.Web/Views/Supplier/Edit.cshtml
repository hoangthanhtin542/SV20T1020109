@using SV20T1020109.Web
@model SV20T1020109.DomainModels.Supplier
@{

}

<div class="box box-primary">
    <div class="box-body">
        @*  @Html.ValidationSummary() *@
        <form action="~/Supplier/Save" method="post">
            <input type="hidden" name="SupplierID" value="@Model.SupplierID" />
            <div class="form-group">
                <label>Tên nhà cung cấp</label>
                @*  <input type="text" class="form-control" value="@Model.SupplierName" name="SupplierName" autofocus> *@
                @Html.TextBoxFor(m => m.SupplierName, new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessage(nameof(Model.SupplierName), new { @style = "color:#f00" })
            </div>

            <div class="form-group">
                <label>Tên Giao dịch</label>
                @*    <input type="text" class="form-control" value="@Model.ContactName" name="ContactName"> *@
                @Html.TextBoxFor(m => m.ContactName, new { @class = "form-control", @autofocus = "autofocus" })
                @Html.ValidationMessage(nameof(Model.ContactName), new { @style = "color:#f00" })
            </div>

            <div class="form-group">
                <label>Điện thoại</label>
                <input type="text" class="form-control" value="@Model.Phone" name="Phone">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" value="@Model.Email" name="Email">
                @Html.ValidationMessage(nameof(Model.Email), new { @style = "color:#f00" })
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input type="text" class="form-control" value="@Model.Address" name="Address">
            </div>

            <div class="form-group">
                <label>Tỉnh / Thành</label>
                @Html.DropDownListFor(m => m.Province, SelectListHelper.Provinces(), new { @class = "form-control select2" })
                @Html.ValidationMessage(nameof(Model.Province), new { @style = "color:#f00" })
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>


    </div>
</div>