@model SV20T1020109.DomainModels.ProductPhoto
@{

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" action="~/Product/SavePhoto" method="post" enctype="multipart/form-data">
            @* @Html.AntiForgeryToken() *@
            <input type="hidden" name="ProductID" value="@Model.ProductID" />
            <input type="hidden" name="PhotoID" value="@Model.PhotoID" />

            <div class="form-group">
                <label class="control-label col-sm-2">chọn ảnh:</label>
                <div class="col-sm-10">
                    @* <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                    onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" /> *@

                    <input type="file" class="form-control" name="uploadPhoto" accept="image/*"
                           onchange="document.getElementById('Photo').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <input type="hidden" name="@nameof(Model.Photo)" value="@Model.Photo" />
                    <img id="Photo" src="~/images/products/@Model.Photo" class="img img-bordered" style="width:200px" />

                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <textarea class="form-control" rows="3" name="Description">@Model.Description</textarea>
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-sm-2" for="DisplayOrder">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    @*    <input type="number" class="form-control" id="DisplayOrder" name="DisplayOrder"> *@
                    @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control", Type = "Number" })
                    @Html.ValidationMessageFor(m => m.DisplayOrder, "", new { @style = "color:#f00" })

                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="IsHidden" value="true" />  hiển thị ảnh
                        </label>

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-floppy-o"></i>
                        Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/Product/Edit/@Model.ProductID">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>

    </div>
</div>