@model SV20T1020109.DomainModels.ProductAttribute
@{
    ViewBag.Title = "Thay đổi thông tin Attribute ";

}

<div class="box box-primary">
    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data" action="~/Product/SaveAttribute">

            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.AttributeID)
            @Html.HiddenFor(m => m.ProductID)

            <input type="hidden" name="ProductID" value="@Model.ProductID" />
            <input type="hidden" name="AttributeID" value="@Model.AttributeID" />

            <div class="form-group">
                <label class="control-label col-sm-2">Tên thuôc tính :</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.AttributeValue, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.AttributeValue, "", new { @style = "color:#f00" })
                </div>
            </div>

                <div class="form-group">
                    <label class="control-label col-sm-2">Giá trị :</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.AttributeValue, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.AttributeValue, "", new { @style = "color:#f00" })
                    </div>
                </div>


            <div class="form-group">
                <label class="control-label col-sm-2" for="DisplayOrder">Thứ tự hiển thị:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control", Type = "Number" })
                    @Html.ValidationMessageFor(m => m.DisplayOrder, "", new { @style = "color:#f00" })

                </div>
            </div>



                <div class="form-group">
                    <div class="col-lg-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-floppy-o"></i>
                            Lưu dữ liệu
                        </button>
                        <a class="btn btn-default" href="~/Product/Edit/@Model.ProductID">
                            Quay lại
                        </a>
                    </div>
                </div>

        </form>

    </div>
</div>