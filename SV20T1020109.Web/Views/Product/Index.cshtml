@using SV20T1020109.Web
@model SV20T1020109.Web.Models.ProductSearchInput
@{
    ViewBag.Title = "Quản lý mặt hàng  ";
}

<div class=" box box-primary ">
    <div class="box-body">
        <!--Tìm kiêsm -->
        <form id="formSearch" action="~/Product/Search" method="get" data-container="#searchResult">
            @Html.HiddenFor(m => m.PageSize, "")
            <div class="row">
                <div class="col-sm-3">
                    @Html.DropDownListFor(m => m.SupplierID, SelectListHelper.ListOfSuppliers(), new { @class = "form-control list" })

                </div>
                <div class="col-sm-3">
                    @Html.DropDownListFor(m => m.CategoryID, SelectListHelper.ListOfCategorys(), new { @class = "form-control list" })

                </div>
                <div class="col-sm-6 input-group">
                    <input name="searchValue" type="text" class="form-control"
                           placeholder="Nhập tên mặt hàng cần tìm ">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                        <a href="~/Product/Create" class="btn btn-primary" style="margin-left:5px">
                            <i class="fa fa-plus"></i>
                            Bổ sung
                        </a>
                    </div>
                </div>
            </div>
            <div class="input-group">
            </div>
        </form>

        <!--Hiển thị tìm kiếm -->

        <div id="searchResult">
        </div>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function (e) {
            $("#formSearch").submit(function (e) {
                e.preventDefault();
                doSearch(this, 1);
                return;
            });
            doSearch("#formSearch", @Model.Page);
        });

        function doSearch(formSearch, page) {
            var action = $(formSearch).prop("action");
            var method = $(formSearch).prop("method");
            var container = $(formSearch).data("container");

            var searchData = $(formSearch).serializeArray();
            searchData.push({ "name": "Page", "value": page });

            $.ajax({
                url: action,
                type: method,
                data: searchData,
                async: false,
                error: function () {
                    alert("Your request is not valid!");
                },
                success: function (data) {
                    $(container).html(data);
                }
            });
        }
    </script>
}

